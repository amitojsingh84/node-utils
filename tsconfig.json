{
  "compilerOptions": {
    "target"                            : "esnext",
    "module"                            : "commonjs",
    "outDir"                            : "./dist",
    "rootDir"                           : "./src",
    "moduleResolution"                  : "node",
    "strict"                            : true,
    "esModuleInterop"                   : true,
    "skipLibCheck"                      : true,
    "forceConsistentCasingInFileNames"  : true,
    "paths"                             : {},
    "importHelpers"                     : true,
    "experimentalDecorators"            : true
  },
  "include"                             : ["src"],
  "exclude"                             : ["node_modules"]
}